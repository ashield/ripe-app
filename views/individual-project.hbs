<div class="content">
	<div class="individual-project">
		<figure>
		   <div class="info">
			   	<p class="description">Project description:<br/> {{project.description}}</p>
			   	<br/>
			   	<div class="task">
			   	<p>Tasks:</p>
		       {{#each tasks}}
		       <p class="project-taskname" data-id="{{_id}}">{{taskname}}</p>
		       <p class="taskdescription">{{taskdescription}}</p>
		       <!-- <p class="user">{{user}}</p> -->
		       <select>
				<option>{{user}}</option>
		       </select>
		       <p class="complete">complete: {{complete}}</p>
		       <span class="project-task-delete" data-id="{{_id}}">&times;</span>
		       {{/each}}
		   		</div>
				<br/>
				<br/>
		            
		    </div>
		    <p class="project-add">Add task</p>
		    <form class="project-form" method="POST">
		    <div>
		    	<div class="field">
		    		<label for="taskname">Task Name</label>
		    		<input type="text" name="taskname" id="taskname" required />
		    	</div>
		    	<div class="field"></div>
		    		<label for="taskdescription">Task Description</label>
		    		<textarea name="taskdescription" id="taskdescription" required></textarea>
		    	<div class="field">
		    		<label for="user">
		    		 <select name="user" id="user" required>
			        <option></option>
			        {{#each users}}
					<option>{{username}}</option>
					{{/each}}
		    		</label>
		    		</select>
		    	</div>
		    </div>
		    <div class="form-actions">
		    	<input type="submit" class="save button" value="Save">
		    	<button type="cancel" class="cancel">Cancel</button>
		    </div>
		</form>
		<div class="project-delete">
			<span class="delete" data-id="{{_id}}">&times;</span>
		</div>
		</figure>
	</div>
</div>