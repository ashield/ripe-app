<div class="content">
	<div class="individual-tasks individual-project">
		<figure>
		   <div class="info">
			{{#unless tasks}}
				<p class="no-tasks-warn">There are currently no tasks assigned to you.
				Please click below to add a task.
				</p>
			{{/unless}}
			   <!-- 	<p class="description">{{project.description}}</p> -->
		       {{#each tasks}}
		       <div class="task">
		       <p class="taskname" data-id="{{_id}}">{{taskname}}</p>
		       <p class="task-description" data-id="{{_id}}">{{taskdescription}}</p>
			{{#if _project}}
		       <p class="project" data-id="{{_id}}">project: {{_project}}</p>
		    {{/if}}
		    <div class="controls">
		       <p class="complete" data-id="{{_id}}">complete: {{complete}}
					<input type="checkbox" id="complete" class="cBox" name="complete"data-id="{{_id}}" />
		       </p>
		       <span class="delete" data-id="{{_id}}">&times;</span>
		   </div>
		       {{/each}}
		   		</div>
		   		    <p class="project-add">Add task:</p>
		   			{{> add-task-form}}
		    </div>

		</figure>
	</div>
</div>